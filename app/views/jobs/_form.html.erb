<%= form_for @job, :html => {:class => "form-horizontal"} do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group error">
    <%= f.label :company_name, :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :company_name%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :company_website , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :company_website %>
    </div>
  </div>
  <div class="control-group error">
    <%= f.label :position , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :position %>
    </div>
  </div>
  <div class="control-group error">
    <%= f.label :experience , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :experience %>
      <span class="help-inline">Example "Fresher or 1-2 Years"</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location , :class => "control-label" %>
    <div class="controls">
    <%= f.select(:location, Job.location_type) %>
    </div>
  </div>
  <div class="control-group error">
    <%= f.label 'Eligibility / Qualification' , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :qualification %>
      <span class="help-inline">Example "B.E/B.Tech/MCA/ M.E /M.Tech/Ms."</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ad_expires_on , :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :ad_expires_on %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :contact_name , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :contact_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_email , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :contact_email %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_number , :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :contact_number %>
    <span class="help-inline">Example "9849098490"</span>
  </div>
  </div>
  <div class="control-group">
    <%= f.label 'Job Summary / Responsibility' , :class => "control-label" %>
    <div class="controls">
    <%#= f.text_area :responsibility, :rows => 3 %>
      <%= f.cktext_area :responsibility, :width => 800, :height => 200 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Skills/Experience' , :class => "control-label" %>
    <div class="controls">
    <%= f.cktext_area :skill, :width => 800, :height => 200 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Enter Text:' , :class => "control-label" %>
    <div class="controls">
    <%= recaptcha_tags %>
    </div>
  </div>
    <div class="control-group">
      <div class="controls">
             <%= f.submit 'Submit', :class => "btn" %>
      </div>
    </div>
<% end %>


