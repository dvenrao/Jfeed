<table class="table table-bordered table-condensed">
  <thead>
  <tr>
    <th>Posting-Date</th>
    <th>Company</th>
    <th>Location</th>
    <th>Position</th>
    <th>Experience</th>
    <th>Last Date</th>
    <th>Qualification</th>
    <th>Info</th>
    <th>Share</th>
  </tr>
  </thead>
  <tbody>
<% if @jobs.nil? %>
<% else %>
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.created_at.strftime("%d-%m-%Y") %></td>
    <td><%= job.company_name.split[0..1].join(" ") %></td>
    <td><%= job.location %></td>
    <td><%= job.position.split[0..1].join(" ") %></td>
    <td><%= job.experience %></td>
    <td><% if job.qualification.nil? %>ASAP<% else %><%= job.ad_expires_on %><% end %></td>
    <td><%= job.qualification.split[0..1].join(" ") %></td>
    <td><%= link_to 'Details', job %></td>
    <td><a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.jobtar.com<%= job_path(job) %>" data-text="Hiring for <%= job.company_name %> - <%= job.position %> in <%= job.location %> for <%= job.experience %>" data-via="jobtar" data-count="none" data-hashtags="JOB">Tweet</a>
</td>
  </tr>
<% end %>
<% end %>
  </tbody>
  </table>

<% if @jobs.nil? %>
<% else %>
      <%= will_paginate @jobs, :class => 'digg_pagination'%>
<% end %>



